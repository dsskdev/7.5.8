@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{ 
    var root = Model.Content.Children.Where(x => x.Level == 2);
    var news = Model.Content.AncestorOrSelf().Descendants("branchNews");
    
}
<div class="col-md-12">
    <h3>
        <a href="/news/">News / Updates
            <i class="fa fa-angle-right"></i>
        </a>
    </h3>
</div>	

@if (news.Any())
{
    foreach (var article in news.Take(3))
    {

        if (article.HasValue("image"))
        {
            <div class="col-md-4 col-sm-6">
                <a href="@article.Url">
                    <img class="img-responsive" src="@Umbraco.TypedMedia(article.GetPropertyValue("image")).Url" />
                    <h4>@article.Name</h4>
                    <p>@(Umbraco.Truncate(article.GetPropertyValue("mainRTE").ToString(), 200, true))</p>
                </a>
            </div>

        }

    }
}